<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!--Top level DayNight theme to be used in AndroidManifest.xml-->
    <style name="Theme.HappyWeight" parent="Base.Theme.HappyWeight">
        <!--Material color attributes (dark theme) -->

        <!--selection controls.-->
        <item name="colorPrimary">@color/primary_200</item>
        <item name="colorPrimaryVariant">@color/primary_600</item>
        <item name="colorSecondary">@color/secondary_200</item>
        <item name="colorSecondaryVariant">@color/secondary_500</item>

        <!--text fields.-->
        <item name="android:colorBackground">@color/dsurface_900</item>
        <item name="colorSurface">@color/dsurface_800</item>
        <item name="colorError">@color/derr_200</item>
        <!--"On" colors define how text, icons and strokes are colored in relation to the surface-->
        <!--on which they appear.-->
        <item name="colorOnPrimary">@color/dsurface_900</item>
        <item name="colorOnSecondary">@color/dsurface_900</item>
        <item name="colorOnBackground">@color/lsurface_50</item>
        <item name="colorOnSurface">@color/lsurface_50</item>
        <item name="colorOnError">@color/dsurface_900</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">false</item>
    </style>
</resources>
