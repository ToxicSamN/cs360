<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!--Top level DayNight theme to be used in AndroidManifest.xml-->
    <style name="Theme.HappyWeight" parent="Base.Theme.HappyWeight"/>

    <!--Base custom theme which will be shared between both light and dark theme variants-->
    <style name="Base.Theme.HappyWeight" parent="Base.Theme.HappyWeight.MaterialComponents">
        <!--Material color attributes (light theme) -->

        <!--selection controls.-->
        <item name="colorPrimary">@color/primary_500</item>
        <item name="colorPrimaryVariant">@color/primary_700</item>
        <item name="colorSecondary">@color/secondary_200</item>
        <item name="colorSecondaryVariant">@color/secondary_500</item>

        <!--text fields.-->
        <item name="android:colorBackground">@color/lsurface_50</item>
        <item name="colorSurface">@color/lsurface_50</item>
        <item name="colorError">@color/lerr_600</item>
        <!--"On" colors define how text, icons and strokes are colored in relation to the surface-->
        <!--on which they appear.-->
        <item name="colorOnPrimary">@color/lsurface_50</item>
        <item name="colorOnSecondary">@color/dsurface_900</item>
        <item name="colorOnBackground">@color/dsurface_900</item>
        <item name="colorOnSurface">@color/dsurface_900</item>
        <item name="colorOnError">@color/lsurface_50</item>
        <!--Material type attributes-->
        <item name="textAppearanceHeadline1">@style/TextAppearance.HappyWeight.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.HappyWeight.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.HappyWeight.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.HappyWeight.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.HappyWeight.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.HappyWeight.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.HappyWeight.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.HappyWeight.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.HappyWeight.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.HappyWeight.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.HappyWeight.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.HappyWeight.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.HappyWeight.Overline</item>
        <!--Material shape attributes-->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.HappyWeight.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.HappyWeight.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.HappyWeight.LargeComponent</item>
        <!--Component styles-->
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.MaterialComponents.Dialog.Alert</item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.HappyWeight.BottomSheetDialog</item>
        <item name="navigationViewStyle">@style/Widget.HappyWeight.NavigationView</item>
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.PrimarySurface</item>
    </style>

    <style name="Base.Theme.HappyWeight.MaterialComponents" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor" tools:ignore="NewApi">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">?android:attr/colorBackground</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>
        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">?attr/colorControlHighlight</item>
    </style>
</resources>
